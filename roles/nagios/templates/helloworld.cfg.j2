# {{ ansible_managed }}

define hostgroup {
	hostgroup_name helloworld
        alias Web Servers
}

{% for host in groups.helloworld %}
  define host {
	use                     linux-server
	host_name               {{ host }} 
	alias                   {{ host }}
#	address                 {{ hostvars[host].ansible_default_ipv4.address }}
	hostgroups 	        helloworld	
  }    
{% endfor %}

# service checks to be applied to the web server
define service {
	use				local-service
	hostgroup_name		        helloworld	
	service_description	        webserver	
	check_command			check_http
	notifications_enabled		0
}
