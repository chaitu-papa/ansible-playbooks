# Define a service to "ping" the local machine

define service{
        use                             local-service         ; Name of service template to use
        host_name                       {{ item }}
        service_description             PING
        check_command			check_ping!100.0,20%!500.0,60%
        }
###
# Monitoring Individual URLs...
#
###
define service{
        host_name                       {{ item }}
        service_description             HTTP http://HOSTADDRESS:PORT/HelloWorld
        check_command                   check_http_url_{{ item }}
        max_check_attempts              5
        check_interval                  0.50
        retry_interval                  0.50
        notifications_enabled           1
        check_period                    24x7
}
define command{
        command_name    check_http_url_{{ item }}
        command_line    /usr/lib64/nagios/plugins/check_http -H {{ item }} -p {{ http_port }} -u /helloworld
      }


